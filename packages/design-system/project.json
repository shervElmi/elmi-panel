{
  "root": "packages/design-system",
  "sourceRoot": "packages/design-system/src",
  "projectType": "library",
  "tags": ["Design System", "UI"],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/design-system/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/design-system"],
      "options": {
        "jestConfig": "packages/design-system/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "config": {
          "configFolder": "packages/design-system/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/react",
        "outputPath": "dist/storybook/design-system",
        "config": {
          "configFolder": "packages/design-system/.storybook"
        },
        "postcssConfig": "packages/design-system/postcss.config.js"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
